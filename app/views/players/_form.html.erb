<% if player.errors.any? %>

<ul>
    <% player.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
</ul>

<% end %>

<%= form_for(player) do |form| %>

<div>
    <%= form.label :name %>
    <%= form.text_field :name %>
</div>
<div>
    <%= form.label :age %>
    <%= form.text_field :age %>
</div>
<div>
    <%= form.label :reason %>
    <%= form.text_area :reason %>
</div>
<%= form.submit %>

<% end %>